# Work Shelf Backend - Environment Variables
# Copy this file to .env and update with your values

# Application
PROJECT_NAME=Work Shelf
VERSION=0.1.0

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
# For local development with Docker Compose:
DATABASE_URL=postgresql+asyncpg://workshelf:workshelf_password@localhost:5432/workshelf
# For Azure PostgreSQL Flexible Server:
# DATABASE_URL=postgresql+asyncpg://workshelf@your-server:password@your-server.postgres.database.azure.com:5432/workshelf

# Azure Storage (optional for local dev, required for production)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=documents

# AWS SES Email
# AWS Region where SES is configured
AWS_REGION=us-east-1
# AWS IAM credentials with SES send permissions
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Verified sender email address in SES
FROM_EMAIL=noreply@workshelf.dev
# Frontend URL for email links
FRONTEND_URL=https://workshelf.dev

# Keycloak
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=workshelf
KEYCLOAK_CLIENT_ID=workshelf-api
KEYCLOAK_CLIENT_SECRET=

# AI Services
# Claude (Anthropic) for creative writing assistance
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-4-sonnet-20250514

# Stripe Payment Processing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Content Integrity (for production)
# COPYSCAPE_API_KEY=
# COPYSCAPE_USERNAME=
# GPTZERO_API_KEY=
