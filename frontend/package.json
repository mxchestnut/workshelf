    "@tiptap/starter-kit": "^3.13.0",
    "@tiptap/suggestion": "^3.13.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "epubjs": "^0.3.93",
    "highlight.js": "^11.11.1",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.560.0",
    "posthog-js": "^1.300.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-reader": "^2.0.15",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
