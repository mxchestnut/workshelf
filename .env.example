# Work Shelf - Environment Variables Template
# Copy to .env for local development
# These are configured as GitHub Secrets for production

# Database
DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@ep-weathered-tree-a81zzcnl-pooler.eastus2.azure.neon.tech/neondb?sslmode=require

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Keycloak Authentication
# For local development:
# KEYCLOAK_SERVER_URL=http://localhost:8080
# For production:
KEYCLOAK_SERVER_URL=https://keycloak.workshelf.dev
KEYCLOAK_REALM=workshelf
KEYCLOAK_CLIENT_ID=workshelf-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-from-keycloak-credentials-tab

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AI Services
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-4-sonnet-20250514

# S3-Compatible Storage (MinIO for local, AWS S3 for production)
# For local MinIO, use: http://minio:9000
# For AWS S3, leave S3_ENDPOINT_URL empty
# For Cloudflare R2, use: https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=workshelf-documents
S3_REGION=us-east-1

# Plagiarism Detection (Optional)
GPTZERO_API_KEY=your-key
COPYSCAPE_API_KEY=your-key
COPYSCAPE_USERNAME=your-username

# Frontend Build-time Variables
VITE_API_URL=https://api.workshelf.dev
VITE_KEYCLOAK_URL=https://keycloak.workshelf.dev
VITE_KEYCLOAK_REALM=workshelf
VITE_KEYCLOAK_CLIENT_ID=workshelf-frontend

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_DSN=your-frontend-sentry-dsn
