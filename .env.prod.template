# Production Environment Variables Template
# Copy this to .env.prod on the server and fill in the actual values

# Database - Neon PostgreSQL
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST/DATABASE?ssl=require
STORAGE_DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST/DATABASE?ssl=require

# Keycloak Database
KC_DB_URL=jdbc:postgresql://HOST:5432/DATABASE?sslmode=require
KC_DB_USERNAME=USERNAME
KC_DB_PASSWORD=PASSWORD

# Security
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_STRING
KEYCLOAK_ADMIN_PASSWORD=CHANGE_THIS

# MinIO
MINIO_ACCESS_KEY=CHANGE_THIS
MINIO_SECRET_KEY=CHANGE_THIS

# Matrix
MATRIX_ADMIN_ACCESS_TOKEN=GET_FROM_MATRIX_SERVER

# Sentry
SENTRY_DSN=YOUR_BACKEND_SENTRY_DSN
VITE_SENTRY_DSN=YOUR_FRONTEND_SENTRY_DSN

# Git SHA (set automatically by deploy script)
GIT_SHA=unknown
