# WorkShelf - Local Development Environment
# Copy this to .env and adjust as needed

# Database
DATABASE_URL=postgresql+asyncpg://workshelf:workshelf_password@localhost:5432/workshelf

# Security
SECRET_KEY=dev-secret-key-please-change-in-production

# Keycloak Authentication
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=workshelf
KEYCLOAK_CLIENT_ID=workshelf-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Matrix Chat
MATRIX_HOMESERVER=http://localhost:8008
MATRIX_ADMIN_TOKEN=your-admin-token

# Redis Cache
REDIS_URL=redis://localhost:6379

# MinIO Object Storage (S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=workshelf
MINIO_SECURE=false

# Optional: AI Services (leave empty if not using)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Optional: Stripe Payments (leave empty if not using)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Optional: Content Integrity (leave empty if not using)
GPTZERO_API_KEY=
COPYSCAPE_API_KEY=
COPYSCAPE_USERNAME=

# Frontend Environment Variables
VITE_API_URL=http://localhost:8000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=workshelf
VITE_KEYCLOAK_CLIENT_ID=workshelf-frontend
VITE_MATRIX_HOMESERVER=http://localhost:8008

# Environment
ENVIRONMENT=development
